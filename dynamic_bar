<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="deneme.css" />
    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
  </head>
  <style>
    .yuzde {
      background-color: red;
      /* width: 400px; */
      height: 50px;
    }
  </style>
  <body>
    <div id="app">
      <div :style="genislik" class="yuzde">{{ yuzdeMiktari }}</div>
      <button v-on:click="butonFonksiyon">düşür</button>
    </div>
    <script>
      new Vue({
        el: "#app",
        data: {
          yuzdeMiktari: 100,
          data: 10,
          Divgenislik: 30,
          dinamikGenislik: 30,
        },
        methods: {
          butonFonksiyon() {
            this.yuzdeMiktari = this.yuzdeMiktari - this.data;
            this.dinamikGenislik = this.dinamikGenislik - 3;
          },
        },
        computed: {
          genislik() {
            // let dinamikGenislik = this.Divgenislik - 5;
            return {
              width: `${this.dinamikGenislik}%`,
            };
          },
        },
      });
    </script>
  </body>
