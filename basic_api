    } */
  </style>
  <body>
    <div id="app">{{ info }}</div>
    <script>
      // import axios from "axios";
      new Vue({
        el: "#app",
        data() {
          return { info: null };
        },
        mounted() {
          axios
            .get("https://api.coindesk.com/v1/bpi/currentprice.json")
            .then((response) => (this.info = response.data));
        },
      });
    </script>
